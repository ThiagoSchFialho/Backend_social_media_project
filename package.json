{
  "name": "backend-social-media-project",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/bin/www",
    "dev": "npm run build && npm start",
    "build": "tsc && npm run copy-ejs && npm run copy-public",
    "copy-ejs": "copyfiles -u 1 src/**/*.ejs dist",
    "copy-public": "copyfiles -u 1 src/public/**/* dist"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^17.2.2",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "copyfiles": "^2.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
